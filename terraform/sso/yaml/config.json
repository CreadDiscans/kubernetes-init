{
    "listen_address": "0.0.0.0",
    "listen_port": "10003",
    "log_level": "trace",
    "threads": 8,
    "allow_unmatched_requests": "false",
    "chains": [
        %{ for client in clients ~}
        {
          "name": "idp_filter_chain",
          "match": {
            "header": ":authority",
            "prefix": "${client.client_id}",
          },
          "filters": [
          {
            "oidc":
              {
                "authorization_uri": "https://keycloak.${domain}/realms/master/protocol/openid-connect/auth",
                "token_uri": "https://keycloak.${domain}/realms/master/protocol/openid-connect/token",
                "callback_uri": "${client.valid_redirect_uris.1}",
                "jwks_fetcher": {
                  "jwks_uri": "https://keycloak.${domain}/realms/master/protocol/openid-connect/certs",
                  "periodic_fetch_interval_sec": 10,
                  "skip_verify_peer_cert": true
                },
                "client_id": "${client.client_id}",
                "client_secret": "${client.client_secret}",
                "scopes": ["openid","minio-authorization","email"],
                "id_token": {
                  "preamble": "Bearer",
                  "header": "Authorization"
                },
                "logout": {
                  "path": "/authservice_logout",
                  "redirect_uri": "https://minio.${domain}/"
                },
                "skip_verify_peer_cert": true
              }
            }
          ]
        }
        %{ endfor ~}
        
    ]
  }